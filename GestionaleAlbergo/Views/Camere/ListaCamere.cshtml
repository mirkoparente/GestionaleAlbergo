@model IEnumerable<GestionaleAlbergo.Models.Camere>

@{
    ViewBag.Title = "ListaCamere";
}

<h2>ListaCamere</h2>

<p>
    @Html.ActionLink("Create New", "CreaCamere")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdCamere)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroCamera)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descrizione)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipologia)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdCamere)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroCamera)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descrizione)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipologia)
        </td>
        <td>
            @Html.ActionLink("Edit", "ModificaCamere", new { id=item.IdCamere }) 
            @Html.ActionLink("Details", "DettaglioCamere", new { id = item.IdCamere }) |
            @Html.ActionLink("Delete", "Elimina", new { id = item.IdCamere })
        </td>
    </tr>
}

</table>
